
@using ChefsDishes.Models;
@model Dish;

<h1>Add A new Dish!!</h1>

<form asp-action="Dishprocessor" method="POST" asp-controller="Home">
    <label asp-for="name">Name of This Dish</label>
    <input type="text" name="name">
    <label asp-for="description">Description of Dish</label>
    <input type="text" name="description">
    <label asp-for="tastiness">Tastiness</label>
    <select name="tastiness">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <label asp-for="calories">Calories</label>
    <input type="text" name="calories">
    <label asp-for="chefid">Who Made This?</label>
    <select name="chefid">
        @{
            foreach(var i in ViewBag.Chefschoices)
            {
                <option value="@i.chefid">@i.firstname</option>
            }
        }
    </select><br>
    <input type="submit"> <input type="reset">
</form>
<a href="/"><button>Back to Dishes</button></a>